<html lang="en">
<!--<![endif]-->
	<head>
		<meta charset="utf-8">
		<title>Sign Up</title>
		<meta name="description" content="iDea a Bootstrap-based, Responsive HTML5 Template">
		<meta name="author" content="htmlcoder.me">

		<!-- Mobile Meta -->
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<!-- Web Fonts -->
		<link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,400,700,300&amp;subset=latin,latin-ext' rel='stylesheet' type='text/css'>
		<link href='http://fonts.googleapis.com/css?family=PT+Serif' rel='stylesheet' type='text/css'>

		<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
		<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
			<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
	</head>

	<body class="full-height no-trans">

		<!-- page wrapper start -->
		<!-- ================ -->
		<div class="page-wrapper">

			<!-- main-container start -->
			<!-- ================ -->
			<section class="main-container">

				<div class="container">
					<div class="row">
            <div class="main object-non-visible" data-animation-effect="fadeInDownSmall" data-effect-delay="300">
							<div class="form-block center-block">
                <h2 class="title">Sign Up For An account</h2>
                <hr>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name),  html:{class:"form-horizontal", role:"form"}) do |f| %>
                <%= devise_error_messages! %>

              <div class="form-group has-feedback">
                <%= f.label :first_name, class:"col-sm-3 control-label" do %>
                First Name<span class="text-danger small">*</span><% end %>
                <div class="col-sm-8">
                <%= f.text_field :first_name, class:"form-control", id:"first_name", placeholder:"First Name" %>
                <i class="fa fa-pencil form-control-feedback"></i>
                </div>
              </div>

              <div class="form-group has-feedback">
                <%= f.label :last_name, class:"col-sm-3 control-label" do %>
                Last Name<span class="text-danger small">*</span><% end %>
                <div class="col-sm-8">
                <%= f.text_field :last_name, class:"form-control", id:"last_name", placeholder:"Last Name"  %>
                <i class="fa fa-pencil form-control-feedback"></i>
                </div>
              </div>

              <div class="form-group has-feedback">
                <%= f.label :email, class:"col-sm-3 control-label" do %>
                Email<span class="text-danger small">*</span><% end %>
                <div class="col-sm-8">
                <%= f.email_field :email, class:"form-control", id:"email", placeholder:"E-mail"  %>
                <i class="fa fa-envelope form-control-feedback"></i>
                </div>
              </div>

              <div class="form-group has-feedback">
                <%= f.label :password, class:"col-sm-3 control-label" do %>
                Password<span class="text-danger small">*</span><% end %>
                <div class="col-sm-8">
                <%= f.password_field :password, class:"form-control", id:"password", placeholder:"Password"  %>
                <i class="fa fa-lock form-control-feedback"></i>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>

                </div>
              </div>

              <div class="form-group has-feedback">
                <%= f.label :password_confirmation, class:"col-sm-3 control-label" do %>
                Password Confirmation<span class="text-danger small">*</span><% end %>
                <div class="col-sm-8">
                <%= f.password_field :password_confirmation, class:"form-control", id:"password", placeholder:"Password Confirmation" %>
                <i class="fa fa-lock form-control-feedback"></i>
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-offset-3 col-sm-8">
                <%= f.submit "Sign Up", class:"btn btn-group btn-light-gray btn-sm" %>
                </div>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
            </div>
          </div>
				</div>
			</section>
			<!-- main-container end -->

		</div>
		<!-- page-wrapper end -->


	</body>
</html>

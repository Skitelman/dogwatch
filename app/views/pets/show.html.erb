<section class="main-container" style="margin-top: 0px;">
<!-- Use 'About Me' Template for debugging -->
  <div class="container">
    <div class="row">

      <!-- main start -->
      <!-- ================ -->
      <div class="main col-md-12">

        <!-- page-title start -->
        <!-- ================ -->
        <h1 class="page-title"><%= @pet.name %></h1>
        <div class="separator-2"></div>
        <div class="space"></div>
        <!-- page-title end -->
        
        <div class="row">
          <div class="col-lg-4 col-sm-4">
            <div class="box-style-1 gray-bg team-member">
              <div class="overlay-container">
                <%= image_tag @pet.image_url(:thumb).to_s %>
                <img src="https://www.petfinder.com/wp-content/uploads/2012/11/dog-how-to-select-your-new-best-friend-thinkstock99062463.jpg" alt="">
              </div>
              <h3>Dog Type</h3>
            </div>
          </div>
          <div class="col-lg-5 col-sm-8">
            <p><%= @pet.description %></p>
            <!-- <ul class="list-icons">
              <li><i class="icon-check"></i> Etiam sed dolor ac diam volutpat</li>
              <li><i class="icon-check"></i> Sed eget pulvinar quam, vel feugiat aliquam </li>
              <li><i class="icon-check"></i> Erat volutpat. Phasellus eu porta suspendisse</li>
              <li><i class="icon-check"></i> Phasellus eu porta ipsum. Suspendisse aliquet</li>
            </ul> -->
          </div>
          <div class="col-lg-3 col-md-12 col-sm-8 col-sm-offset-4 col-md-offset-0">
            <div class="vertical-divider-left-lg side">
              <h2 class="title">Owner(s)</h2>
              <ul class="list-icons">
                <% @pet.owners.each do |owner| %>
                  <li><i class="fa fa-child pr-5"></i><a href=""><%= owner.name || "n/a" %></a></li>
                  <li><i class="fa fa-phone pr-5"></i><%= owner.phone_number || "n/a" %></li>
                  <li><i class="fa fa-map-marker pr-5"></i><%= owner.city || "n/a" %></li>
                  <br>
                <% end %>
              <!-- ul social media -->
            </div>
          </div>
        </div>
      </div>
      <!-- main end -->

      <!-- current user options -->
        <% if @pet.owners.include?(current_user) %>
          <div class="call-to-action">
            <!-- see all pets -->
          <%= button_to pets_path, {class: "btn btn-white more", method: 'get'} do %>
            All Your Pets<i class="pl-10 fa fa-info"></i>
          <% end %>
            <!-- edit pet -->
            <a class="btn btn-default contact" data-toggle="modal" data-target="#addPetModal">Edit Pet<i class="pl-10 fa fa-paw"></i></a>
        </div>
          <%= render 'pets/editPetModal' %>
        <% end %>
      <!-- end current user options -->
        

    </div>
  </div>
</section>
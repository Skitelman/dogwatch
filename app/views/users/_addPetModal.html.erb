<!-- Modal -->
<div class="modal fade" id="addPetModal" tabindex="-1" role="dialog" aria-labelledby="addPetModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="addPetModal">Add A Pet</h4>
      </div>
      <div class="modal-body">
        <%= form_for Pet.new do |f| %>
        <div class="text-center">
          <%= f.label :name %>
          <br>
          <%= f.text_field :name %>
        </div>
        <div class="text-center">
          <%= f.label :description %>
          <br>
          <%= f.text_area :description, cols: 50, rows: 12  %>
        </div>
        <div class="text-center">
          <%= f.label :image %>
          <br>
          <%= f.file_field :image, class:"center-block" %>
        </div>
        <div class="text-center">
          <%= f.label :remote_image_url, "or image URL" %><br />
          <%= f.text_field :remote_image_url %>
        </div>
        <div class="text-center">
          <%= f.submit "Add Pet", class:"btn btn-default"%>
        </div>
        <% end  %>
    </div>
  </div>
</div>
</div>

<h1>Community</h1>
<div class="row">
  <% @users.each do |user| %>
    <div class="col-xs-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%=link_to user.name, user_path(user) %></h3>
        </div>
        <div class="panel-body">
          <h4>Pets</h4>
          <ul>
            <%= render user.pets %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
</div>

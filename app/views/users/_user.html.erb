<h1> <%= user.name%> </h1>
<% if user == current_user %>
  <%= link_to "Edit Profile", edit_user_registration_path %>
<% end %>
<!-- list all pets -->
<% if user == current_user %>
  <h1>Your Pets</h1>
<% else %>
  <h1><%= user.first_name  %>'s Pets</h1>
<% end %>
  <ul>
    <%= render user.pets %>
  </ul>
<% if user == current_user %>
  <%= link_to "Add Pet", new_pet_path %>
<% end %>
<hr>
<!-- list all requests -->
<% if user == current_user %>
  <h1>Requests You Made For Other People To Walk Your Dogs</h1>
<% else %>
  <h1>Walks <%= user.first_name  %> Has Requested</h1>
<% end %>
<ul>
  <%= render user.requests %>
</ul>
<% if user == current_user %>
  <%= link_to "Make Walk Request", new_request_path %>
<% end %>

<h1>All Open Requests</h1>
<div class="row">
  <% @requests.each do |request| %>
    <div class="col-xs-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%=link_to request.owner.name, user_path(request.owner) %></h3>
        </div>
        <div class="panel-body">
          <%= render request %>
        </div>
      </div>
    </div>
  <% end %>
</div>

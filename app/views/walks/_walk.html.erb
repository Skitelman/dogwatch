<div id="request-<%= walk.id %>-message"></div>

<div class="col-sm-6 col-md-4 isotope-item walks">
  <div class="box-style-1 white-bg">
    <div id="request-<%= walk.id %>">

      <!-- 'you are walking' message -->
      <% if !params['id'] %>
          You are walking:
        <% else %>
          <%= walk.walker.first_name %> is walking:
      <% end %>

      <h3><%= link_to "Pets to Walk", request_path(request) %></h3>
      <ul>
        <% walk.pets.each do |pet| %>
          <li><%= pet.name %></li>
        <% end %>
      </ul>
      <strong>Start Time: </strong><%= walk.request.start_time.strftime("%b %e, %l:%M %p")  %>
      <br>
      <strong>End Time: </strong><%= walk.request.end_time.strftime("%b %e, %l:%M %p")  %>
      <% if walk.request.pickup %>
        <p>
          You need to pickup the pups!
        </p>
      <% else %>
        <p>
          <%= walk.request.owner.first_name %> will drop off the pups at your home.
        </p>
      <% end %>

      <!-- shows button to walk the dog -->
      <% if !params['id'] %>
        <%= form_for walk, remote: true do |f| %>
        <div>
          <%= f.label "Click To Let The Owner Know You Walked The Dog" %>
          <%= f.submit "Finish Walk" %>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

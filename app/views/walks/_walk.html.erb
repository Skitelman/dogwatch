<!-- 'you are walking' message -->
<% if !params['id'] %> 
    You are walking:
  <% else %>
    <%= walk.walker.first_name %> is walking:
<% end %>

<!-- list of pet's on this walk -->
<ul>
  <% walk.pets.each do |pet| %>
    <li><%= pet.name %></li>
  <% end %>
</ul>

<strong>Start Time:</strong><%= walk.request.start_time.to_s  %>

<strong>End Time:</strong><%= walk.request.end_time.to_s  %>

<% if walk.request.pickup %>
  <p>
    You need to pickup the pups!
  </p>
<% else %>
  <p>
    <%= walk.request.owner.first_name %> will drop off the pups at your home.
  </p>
<% end %>

<!-- shows button to walk the dog -->
<% if !params['id'] %>
  <%= form_for walk do |f| %>
    <%= f.submit "Walk Dog" %>
  <% end %>
<% end %>

<br><br><hr>

